{
  "name": "hacker-rank-queue",
  "version": "0.2.0",
  "description": "Slack bot for managing a queue of reviewers for HackerRanks",
  "main": "index.js",
  "repository": "https://github.com/apklinker/hacker-rank-queue",
  "author": "Source Allies",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "start": "pnpm build && node --enable-source-maps dist/index.js",
    "compile": "tsc -p . --noEmit",
    "build": "tsup src/index.ts --target node14 --sourcemap",
    "build:docker": "docker build -t sai/hacker-rank-queue -f docker/Dockerfile .",
    "lint": "pnpm lint:no-fix --fix",
    "lint:no-fix": "eslint . --ext .js,.ts --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "verify": "pnpm lint:no-fix && pnpm format:check && pnpm compile && pnpm build && pnpm test",
    "deploy": "cd .aws && ./scripts/deploy-dev.sh ; cd ..",
    "postinstall": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "devDependencies": {
    "@types/chance": "^1.1.2",
    "@types/google-spreadsheet": "^3.0.2",
    "@types/jest": "^26.0.23",
    "@types/node": "~14",
    "@types/node-cron": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "chance": "^1.1.7",
    "eslint": "^7.23.0",
    "eslint-plugin-only-warn": "^1.0.2",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@slack/bolt": "^3.3.0",
    "dotenv": "^8.2.0",
    "google-spreadsheet": "^3.1.15",
    "lock": "^1.1.0",
    "node-cron": "^3.0.0",
    "tsup": "^4.14.0"
  }
}
