{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"],
      "@dialogs": ["./src/bot/dialogs/index"],
      "@shortcuts": ["./src/bot/shortcuts/index"]
    }
  },
  "include": ["src"]
}
