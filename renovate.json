{
  "extends": [
    "config:base",
    ":semanticCommitScopeDisabled",
    ":rebaseStalePrs",
    "group:allNonMajor"
  ],
  "ignorePresets": [":prHourlyLimit2"],
  "timezone": "America/Chicago",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchPackageNames": ["node-cron"],
      "allowedVersions": ">3.0.1"
    }
  ],
  "schedule": [
    "before 11am on Monday"
  ],
  "rollbackPrs": true,
  "labels": ["dependency"]
}
