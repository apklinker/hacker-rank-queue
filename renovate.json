{
  "extends": [
    "config:base",
    ":semanticCommitScopeDisabled",
    ":rebaseStalePrs",
    "group:recommended",
    "group:monorepos"
  ],
  "ignorePresets": [":prHourlyLimit2"],
  "timezone": "America/Chicago",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "schedule": [
    "before 11am on Monday"
  ],
  "rollbackPrs": true,
  "labels": ["dependency"]
}
